---
const { id } = Astro.props;

const gtagUrl = `https://www.googletagmanager.com/gtag/js?id=${id}`;
---

<script async src={gtagUrl}></script>
<script define:vars={{ id }}>
window.dataLayer = window.dataLayer || [];
function gtag() {
  dataLayer.push(arguments);
}
gtag("js", new Date());
  gtag("config", id);
</script>
