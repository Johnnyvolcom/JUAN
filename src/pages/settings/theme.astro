    let savedQueue = [];
    document
      .getElementById("theme-switch-form")
      .addEventListener("submit", (e) => {
        e.preventDefault();
        if (savedQueue.length >= 2) return;
        savedQueue.push(e);
        notify.show("Saved", "success", 2000);
        setTimeout(() => {
